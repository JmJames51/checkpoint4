{% extends 'base.html.twig' %}

{% block title %}Family index{% endblock %}

{% block body %}
    <h1>Family index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Profile</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for family in families %}
            <tr>
                <td>{{ family.id }}</td>
                <td>{{ family.firstname }}</td>
                <td>{{ family.lastname }}</td>
                <td>{{ family.profile }}</td>
                <td>
                    <a href="{{ path('family_show', {'id': family.id}) }}">show</a>
                    <a href="{{ path('family_edit', {'id': family.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('family_new') }}">Create new</a>
{% endblock %}
