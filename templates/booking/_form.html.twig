<div class="form-container">
	{{ form_start(form, {
        attr:{id: 'booking_form'}
}) }}
	<div>
		{{ form_widget(form.city,{ 
            attr: {placeholder: 'City'}
}) }}
	</div>
	<div>
		{{ form_widget(form.name,{ 
            attr: {placeholder: 'Name'}
}) }}
	</div>
	<div>
		{{ form_widget(form.availability,{ 
            attr: {placeholder: 'Availability'}
}) }}
		<div>
			{{ form_widget(form.description,{ 
            attr: {placeholder: 'Description'}
}) }}
		</div>
		<div>
			{{ form_widget(form.picture,{ 
            attr: {placeholder: 'Picture'}
}) }}
		</div>

	</div>

	{{ form_end(form) }}

	<div class="button-form">
		<button type="submit" form="booking_form" class="btn">{{ button_label|default('Save') }}</button>
		{% if showDeleteForm %}
			{{ include('booking/_delete_form.html.twig') }}
		{% endif %}
	</div>
